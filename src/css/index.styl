//关闭按钮动画
@keyframes rotates
  from
    transform: rotate(-20deg)
  to
    transform: rotate(0deg)
    color: #535b5c

body
  background: #f5f5f5
.container
  background: #e6e6e6
  max-width: 1280px
  margin: 0 auto
  .todo
    padding-left: 40px
    height: 70px
    margin-top: 30px
    line-height: 70px
    font-size: 24px
    background: #3e3e3e
    color: #fff
  .todo-content
    overflow: hidden
    .add-task
      padding: 12px 10px 8px 40px
      margin-bottom: 10px
      height: 40px
      background: #fff
      font-size: 0
      box-shadow: 0 3px 10px #c1c1c1
      @media screen and (max-width: 750px)
        padding-left: 10px
      .add-task-text, .btn-submit
        display: inline-block
        font-size: 16px
        vertical-align: top
      .add-task-text
        width: 40%
        height: 35px
        padding-left: 20px
        border: 1px solid #ccc
        outline: none
        border-radius: 5px 0 0 5px
        transition: border-color .3s
      .add-task-text:focus
        border-color: #838383
      .btn-submit
        width: 100px
        height: 37px
        line-height: 37px
        background: #7e8c8d
        text-align: center
        color: #fff
        cursor: pointer
        transition: background .3s
        &:hover
          background: #3e3e3e
      @media screen and (max-width: 750px)
        .add-task-text
          width: 75%
          padding-left: 10px
        .btn-submit
          width: 70px
    .task-list
      padding: 0 20px 8px
      .task-item
        position: relative
        padding: 20px
        color: #515151
        border-bottom: 1px solid #bdbdbd
        transition: all .3s
        &:hover
          background: #fff
          border-radius: 5px
          box-shadow: 5px 5px 10px #c1c1c1
        & > span
          display: inline-block
          vertical-align: top
        .task-item-text
          width: 80%
          overflow: hidden
          text-overflow: ellipsis
          white-space: normal
        .task-item-text-active
          color: #b7b7b7
          text-decoration: line-through
        .task-item-checked > input[type=checkbox]
          width: 20px
          height: 20px
          margin-right: 10px
        .task-item-handle
          position: absolute
          right: 30px
          top: 22px
          .task-item-del
            margin-right: 10px
          .task-item-del:hover, .task-item-desc:hover
            cursor: pointer
            text-decoration: underline
            color: #FF0000
      .task-item:last-child
        border-bottom: 0
    .task-desc-shade
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      z-index: 99
      background: rgba(0, 0, 0, .3)
    .task-desc-modal
      position: fixed
      top: 50%
      left: 50%
      margin: -170px 0 0 -250px
      padding: 10px
      box-sizing: border-box
      min-width: 500px
      height: 320px
      background: #fff
      z-index: 100
      .task-desc-close
        position: absolute
        top: 10px
        right: 15px
        font-size: 30px
        color: #aebebf
        cursor: pointer
        &:hover
          animation: rotates 1s forwards
      .task-desc-title
        width: 430px
        height: 17px
        margin: 20px 0 10px
        font-weight: 700
        overflow: hidden
      .desc-content
        .desc-textarea
          width: 470px
          height: 160px
          background: #f5f5f5
          font-size: 16px
          line-height: 20px
          resize:none
      .remind > input
        width: 474px
        margin-top: 5px
        border: 1px solid #b9b9b9
        background: #f5f5f5
      .task-desc-ok
        width: 80px
        height: 35px
        line-height: 35px
        margin: 10px 0 0 396px
        text-align: center
        color: #fff
        background: #7e8c8d
        cursor: pointer
        transition: background .3s
        &:hover
          background: #2e3435